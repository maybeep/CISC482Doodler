<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/colorRed"
                android:tag="#E91E63"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeColor"
                app:srcCompat="@drawable/color"
                app:tint="#E91E63"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/colorYellow"
                android:tag="#FFEB3B"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeColor"
                app:srcCompat="@drawable/color"
                app:tint="#FFEB3B"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/colorBlue"
                android:tag="#2196F3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeColor"
                app:srcCompat="@drawable/color"
                app:tint="#2196F3"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/colorGreen"
                android:tag="#4CAF50"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeColor"
                app:srcCompat="@drawable/color"
                app:tint="#4CAF50"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/colorBlack"
                android:tag="#000000"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeColor"
                app:srcCompat="@drawable/color"
                app:tint="#000000"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/strokeWeight"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeStrokeWeight"
                app:srcCompat="@drawable/stroke_weight"
                app:tint="#000000"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/opacity"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="changeOpacity"
                app:srcCompat="@drawable/opacity"
                app:tint="#000000"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:backgroundTint="#FBFBFB"
                android:onClick="clear"
                app:srcCompat="@drawable/clear"
                app:tint="#FF0000"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <com.example.cisc482doodler.DoodleView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/canvas"/>

    </LinearLayout>

</RelativeLayout>